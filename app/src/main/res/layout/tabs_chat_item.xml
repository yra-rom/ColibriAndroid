<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingTop="15dp"
    android:paddingBottom="0dp"
    android:paddingRight="0dp">
    <ImageView
        android:id="@+id/lchat_ivAvatar"
        android:src="@drawable/letter_c"
        android:padding="1dp"
        android:layout_height="75dp"
        android:layout_width="64dp" />

    <TextView
        android:id="@+id/lchat_tvNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lchat_ivAvatar"
        android:layout_toEndOf="@+id/lchat_ivAvatar"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/lchat_tvTime"
        android:text="Time"
        android:textColor="#808080"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignTop="@+id/lchat_tvNick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/lchat_tvLastMsg"
        android:text="Last Message"
        android:textSize="14sp"
        android:textColor="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lchat_ivAvatar"
        android:layout_alignLeft="@+id/lchat_tvNick"
        android:layout_alignStart="@+id/lchat_tvNick"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp" />

</RelativeLayout>